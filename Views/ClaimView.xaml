<Window x:Class="CMCS.Views.ClaimView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claims" Height="400" Width="600">
    <Grid Background="#EAF2F8">
        <StackPanel Margin="10">
            <TextBlock Text="Claims" FontSize="20" FontWeight="Bold" Foreground="#154360" Margin="0,0,0,20"/>
            <ListView Name="ClaimsListView" Height="200" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Claim ID" DisplayMemberBinding="{Binding ClaimId}" Width="50"/>
                        <GridViewColumn Header="Lecturer Name" DisplayMemberBinding="{Binding LecturerName}" Width="150"/>
                        <GridViewColumn Header="Total Amount" DisplayMemberBinding="{Binding TotalAmount}" Width="100"/>
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Add New Claim" Width="150" HorizontalAlignment="Left" Click="AddClaim_Click"/>
        </StackPanel>
    </Grid>
</Window>
