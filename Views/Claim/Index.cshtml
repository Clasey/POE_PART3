@model IEnumerable<POE_PART3.Models.Claim>

@{
    ViewData["Title"] = "Claims";
}

<h1>Claims</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Date Submitted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.Description</td>
                <td>@claim.Amount</td>
                <td>@claim.DateSubmitted.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Claim" asp-action="Create" class="btn btn-primary">Create New Claim</a>
